function _init()
	miny_intro()
 local 	in_time = time()
	while(time() - in_time < 0.5) do
		flip()
	end
	in_time = time()
	sfx(1)
	spr(1, x1, y + 8,1,1,true)
	spr(1, x2, y - 8)
	spr(1, x2 + 16, y+8,1,1,true)
	while(time() - in_time <1.5) do
		flip()
	end
	cls()
end

function miny_intro()
	sfx(0)
	local n = 0
	local t = 0
	while (x1 <= 50 and x2 >= 68) do
	 cls()
		print("miny", x1, y, n)
		print("games", x2, y, n)
		local in_time = time()
		while(time() - in_time < 0.02) do
			flip()
		end
		x1 = x1 + 1	
		x2 = x2 - 1
		if (t <= 3) then
			t = t + 1
		else
			n = n + 1
			t = 0
		end
		if(n >= 20) then
			n = 0
		end
	end
end
